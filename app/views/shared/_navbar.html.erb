<div class="navbar navbar-expand-sm navbar-light bg-black navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "/rooms", class: "navbar-brand ms-3" do %>
      <%= image_tag ("groovx-transparent-logo.png"), style: "width: auto; height: 50px;" %>

    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Create A Room", new_room_path, class: "nav-link text-white"%>
          </li>
          <li class="nav-item active">
            <%= link_to "My Rooms",  my_rooms_path, class: "nav-link text-white" %>
          </li>


          <li class="nav-item dropdown">
          <a href="#" class="avatar mx-3" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <% if current_user.avatar? %>
              <%= cl_image_tag current_user.avatar.key, crop: :fill, class: "avatar", alt: "dropdown menu" %>
            <% else %>
             <div class="rounded-circle p-0 d-flex align-items-center justify-content-center mx-2" style="width: 60px; height: 60px; border: 2px solid #1DB954;">
              <span class="text-uppercase font-weight-bold" style="font-size: 24px;">
                <%= current_user.name[0] %><%= current_user.name[-1] %>
              </span>
            </div>
            <% end %>
          </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Profile", "users/edit", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
